<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auth.jwt.mapper.AccountMapper">
  <insert id="save" parameterType="com.auth.jwt.entity.Account" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO accounts (username, password)
    VALUES (#{username}, #{password})
  </insert>
  <select id="findByUsername" resultType="com.auth.jwt.entity.Account">
    SELECT * FROM accounts WHERE username = #{username}
  </select>
</mapper>